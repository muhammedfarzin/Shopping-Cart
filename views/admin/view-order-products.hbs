<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}

            <div class="col-md-3 p-3" style="width: 15rem; height: 24rem;">
                <div class="card">
                    <img src="/product-images/{{this.product._id}}.jpg" 
                        alt="Card image cap" 
                        class="card-img-top"
                        style="height: 12rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.product.name}}</h5>
                        <p class="card-text">Rs.{{this.product.price}}</p>
                        <p class="card-text">Quantity: {{this.quantity}}</p>
                        <p class="card-text">{{this.product.description}}</p>
                    </div>
                </div>
            </div>

            {{/each}}
        </div>
    </div>
</section>