<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Mobile</th>
                <th>Address</th>
                <th>Pincode</th>
                <th>Payment Method</th>
                <th>Total Amount</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            {{#each orders}}

            <tr>
                <td>{{this.date}}</td>
                <td>{{this.deliveryDetails.Mobile}}</td>
                <td>{{this.deliveryDetails.Address}}</td>
                <td>{{this.deliveryDetails.Pincode}}</td>
                <td>{{this.paymentMethod}}</td>
                <td>{{this.totalAmount}}</td>
                <td>{{this.status}}</td>
                <td><a href="/admin/users/view-order-products/{{this._id}}" class="btn btn-primary">View Products</a></td>
            </tr>

            {{/each}}
        </tbody>
    </table>
</div>