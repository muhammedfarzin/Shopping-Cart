<section>
  <div class="container">
    <div class="row mt-4">
      <a class="btn btn-success ml-auto" href="/admin/add-product">Add Products</a>
    </div>
    <table class="display table mt-5" id="productsTable">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Description</th>
          <th scope="col">Image</th>
          <th>options</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.name}}</td>
          <td>{{this.category}}</td>
          <td>{{this.description}}</td>
          <td><img style="width: 50px; height: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
          <td>
            <a href="admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="admin/delete-product/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('Are you want to delete {{this.name}} ?')">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>

